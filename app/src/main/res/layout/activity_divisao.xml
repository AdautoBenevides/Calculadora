<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Divisao">

    <View
        android:id="@+id/view6"
        android:layout_width="320dp"
        android:layout_height="491dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/corpo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.505" />

    <View
        android:id="@+id/view"
        android:layout_width="246dp"
        android:layout_height="72dp"
        android:layout_marginTop="32dp"
        android:background="#E4DFDF"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toTopOf="@+id/view6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btndividir"
        android:layout_width="89dp"
        android:layout_height="49dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/retangulos"
        android:text="="
        android:textColor="#FFFEFE"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/view6" />

    <View
        android:id="@+id/bntnmr1"
        android:layout_width="246dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/retangulos"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <View
        android:id="@+id/bunnmr2"
        android:layout_width="246dp"
        android:layout_height="72dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/retangulos"
        app:layout_constraintBottom_toTopOf="@+id/btndividir"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintStart_toStartOf="@+id/view6" />

    <EditText
        android:id="@+id/nmr1"
        style="@style/input"
        android:gravity="center"
        android:hint="Número 1"
        android:textColorHint="#80000000"
        app:layout_constraintBottom_toBottomOf="@+id/bntnmr1"
        app:layout_constraintEnd_toEndOf="@+id/bntnmr1"
        app:layout_constraintStart_toStartOf="@+id/bntnmr1"
        app:layout_constraintTop_toTopOf="@+id/bntnmr1" />

    <View
        android:id="@+id/simboldividir"
        android:layout_width="86dp"
        android:layout_height="47dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/retangulos"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toBottomOf="@+id/bntnmr1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="48dp"
        android:layout_height="42dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="÷"
        android:textColor="#FFFFFF"
        android:textColorHint="#020202"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/simboldividir"
        app:layout_constraintEnd_toEndOf="@+id/simboldividir"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/simboldividir" />

    <EditText
        android:id="@+id/nmr2"
        style="@style/input"
        android:gravity="center"
        android:hint="Número 2"
        android:textColorHint="#80000000"
        app:layout_constraintBottom_toBottomOf="@+id/bunnmr2"
        app:layout_constraintEnd_toEndOf="@+id/bunnmr2"
        app:layout_constraintStart_toStartOf="@+id/bunnmr2"
        app:layout_constraintTop_toTopOf="@+id/bunnmr2" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="219dp"
        android:layout_height="56dp"
        android:gravity="right|center_vertical"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>